<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= group.name %> - ClashMind</title>
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-pk2QbTU5pH23A8bVh2kIrw4FTv0C1W4gXg2IHuCK9zs4V/1N3D9O6U4C6Fe1/RSJpt72PYtmJCPItTJEBG9P0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/custom.css">
</head>
<body class="bg-gray-900 text-white font-inter fade-in">
  <header class="bg-blue-600 shadow-lg">
    <div class="container mx-auto flex items-center justify-between py-4 px-6">
      <h1 class="text-2xl font-bold"><i class="fa-solid fa-hashtag mr-2"></i><%= group.name %></h1>
      <a href="/" class="hover:text-blue-200 transition">
        <i class="fa-solid fa-arrow-left"></i> Torna alla Home
      </a>
    </div>
  </header>

  <main class="container mx-auto px-6 py-8">
    <p class="mb-6 text-gray-300"><%= group.description %></p>

    <section class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Post</h2>
      <div class="space-y-4">
        <% posts.forEach(post => { %>
          <div class="p-4 bg-gray-800 rounded shadow hover:shadow-lg transition">
            <p class="mb-2"><%= post.content %></p>
            <small class="text-gray-500">Creato il: <%= new Date(post.created_at).toLocaleString() %></small>
          </div>
        <% }) %>
      </div>
    </section>

    <section>
      <h3 class="text-xl font-bold mb-3">Nuovo Post</h3>
      <form method="post" action="/group/<%= group.id %>/post" class="space-y-4">
        <textarea name="content" rows="4" placeholder="Scrivi il tuo post..." class="w-full px-4 py-2 rounded bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
        <button type="submit" class="w-full py-2 bg-blue-600 rounded hover:bg-blue-700 transition">
          Invia <i class="fa-solid fa-paper-plane ml-2"></i>
        </button>
      </form>
    </section>
  </main>
</body>
</html>
